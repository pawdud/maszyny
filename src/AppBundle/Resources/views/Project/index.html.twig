{% extends 'AppBundle::layout.html.twig' %}

{% block content_inner %}
     
    
    <div class="panel panel-default">
        <div class="panel-heading">
        {% if projects.getTotalItemCount %}
            Projekty <i class="fa fa-cog"></i>
        {% else %}    
            Brak projektów
        {% endif %}
        </div>               
        
            <div class="panel-body">   
                <header class="main-box-header clearfix">

                    <div class="filter-block pull-right">
                        <div class="form-group pull-left">
                            <input type="text" placeholder="Szukaj..." class="form-control">
                            <i class="fa fa-search search-icon"></i>
                        </div>
                        <a class="btn btn-primary pull-right" href="{{ path('projekt_dodaj') }}"> 
                            <i class="fa fa-plus-circle fa-lg"></i> Dodaj projekt
                        </a>
                    </div>
                </header>
                
                
                {% if projects.getTotalItemCount %}
                     <div class="main-box-body clearfix">
     <div class="table-responsive">
                <table class="table">
                    <thead>
                        <th class="text-center">Id</th>
                        <th class="text-center">Nazwa projektu</th>                                              
                        <th class="text-center">Data utworzenia</th>
                        <th class="text-center">Pracownik</th>
                        <th class="text-center"></th>
                    </thead>
                    
                    <tbody>
                        {% for project in projects %}
                        <tr>
                            <td class="text-center">{{ project.id }}</td>
                            <td class="text-center">{{ project.name }}</td>                           
                            <td class="text-center">
                                {{ project.timeAdd | date('Y:m:d H:i') }}
                             </td> 
                             <td class="text-center">
                                <i class="fa fa-user fa-lg"></i> {{ project.user.name }}
                                
                            </td>                            
                            <td style="width: 15%;">
                                <a href="{{ path('czesci_drzewo', {'id': project.id}) }}" class="table-link" title="Zobacz strukturę">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                                <a href="{{ path('projekt_edytuj', {'id': project.id}) }}" class="table-link" title="Edytuj">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                                <a href="{{ path('projekt_usun', {'id': project.id}) }}" class="table-link danger" title="Usuń">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>                      
                        </tr>
                        {% endfor %}                        
                    </tbody>
                </table>
               </div>
             </div>
            </div>
        {% endif %}
    </div>
{% endblock %}